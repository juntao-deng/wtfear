<jboss-deployment-structure>
  <ear-subdeployments-isolated>false</ear-subdeployments-isolated>
  <deployment>
    <!-- by default, resources are the ones under EAR/lib directories -->
    <!-- and are visible to others who depends on module "deployment.cmp.ear" -->
    <exclusions>
      <module name="org.jboss.resteasy.resteasy-jackson-provider" />
    </exclusions>
    <dependencies>
      <module name="com.mysql" export="true" />
      <module name="org.codehaus.jettison" export="true" />
      <module name="org.jboss.resteasy.resteasy-jaxrs" export="true"/>
      <module name="org.jboss.resteasy.resteasy-jettison-provider" />
      <module name="javax.ws.rs.api" export="true" />
      <module name="com.sun.xml.bind" export="true" />
      <module name="org.jboss.common-core" export="true" />
      <module name="org.picketlink" export="true" />
      <module name="org.jboss.logging" export="true" /> 
      <module name="org.jboss.dmr" export="true" />
      <module name="org.jboss.as.server" export="true" />
      <module name="org.jboss.as.controller-client" export="true" />
      <module name="org.apache.commons.io" export="true"/>
      <module name="org.apache.commons.lang" export="true"/>
      <module name="org.apache.xerces" export="true"/>
      <module name="org.apache.log4j" export="true"/>
      <module name="org.scannotation.scannotation" export="true"/>
      <module name="org.jboss.vfs" export="true"/>
      <module name="org.jboss.msc" export="true"/>
      <module name="org.jboss.as.clustering.singleton" export="true"/>
      <module name="org.jboss.as.clustering.api" export="true"/>
      <module name="org.jboss.as.clustering.jgroups" export="true"/>
      <module name="org.jboss.as.jmx" export="true"/>
      <module name="org.jboss.as.clustering.common" export="true"/>
      <module name="javax.jms.api" export="true"/>
      <module name="org.jboss.msc" export="true" />
      <module name="org.jboss.ejb3" export="true" />
      <module name="org.jboss.remote-naming" export="true" />
      <module name="org.jboss.xnio" export="true" />
      <module name="org.jgroups" export="true" />
      <module name="net.juniper.jmp.cmp.subsystem" export="true"/>
      <module name="org.apache.commons.codec" export="true"/>
      <module name="org.apache.httpcomponents" export="true"/>
      <module name="org.apache.commons.logging" export="true"/>
      <module name="org.apache.commons.pool" export="true"/>
      <module name="org.apache.commons.beanutils" export="true"/>
      <module name="org.apache.commons.io" export="true"/>
      <module name="org.apache.commons.lang" export="true"/>
      <module name="org.apache.commons.collections" export="true"/>	
    </dependencies>
  </deployment>  
</jboss-deployment-structure>
